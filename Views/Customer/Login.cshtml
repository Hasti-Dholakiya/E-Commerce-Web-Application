@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        .hero {
            background-image: url('https://source.unsplash.com/1600x400/?login,technology');
            background-size: cover;
            background-position: center;
            height: 250px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-shadow: 1px 1px 5px rgba(0,0,0,0.6);
        }

            .hero h1 {
                background-color: rgba(0, 0, 0, 0.6);
                padding: 15px 30px;
                border-radius: 10px;
            }

        .form-wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: start;
        }

        .form-container {
            max-width: 420px;
            margin: -60px auto 40px;
            padding: 40px 30px;
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        }

        .form-floating label {
            font-weight: 500;
        }

        .form-footer {
            text-align: center;
            margin-top: 20px;
            font-size: 0.95rem;
        }

            .form-footer a {
                color: #0d6efd;
                text-decoration: none;
            }

                .form-footer a:hover {
                    text-decoration: underline;
                }

        .btn-lg {
            font-weight: 600;
        }

        .alert {
            margin-top: 20px;
        }
    </style>
</head>
<body>
      <div class="hero">
        <h1>Welcome Back</h1>
      </div>


    <div class="form-wrapper">
        <div class="form-container">
            <h3 class="text-center mb-4">Login to Your Account</h3>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                <div class="form-floating mb-3">
                    <input type="email" name="email" class="form-control" id="email" placeholder="name@example.com" required />
                    <label for="email"><i class="bi bi-envelope-fill me-2"></i>Email address</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="password" name="password" class="form-control" id="password" placeholder="Password" required />
                    <label for="password"><i class="bi bi-lock-fill me-2"></i>Password</label>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">Login</button>
                </div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }

            <div class="form-footer">
                <a href="#">Forgot password?</a> &nbsp;|&nbsp;
                <a href="@Url.Action("Register", "Account")">Create an account</a>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
