@model Day6.Models.Category
@{
    ViewBag.Title = "Edit Category";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f2f4f6;
            font-family: 'Segoe UI', sans-serif;
        }

        .hero {
            background-image: url('https://source.unsplash.com/1600x400/?edit,data,form');
            background-size: cover;
            background-position: center;
            height: 250px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-shadow: 1px 1px 4px rgba(0,0,0,0.6);
        }

            .hero h1 {
                background-color: rgba(0, 0, 0, 0.6);
                padding: 20px 40px;
                border-radius: 10px;
            }

            .form-container {
            max-width: 550px;
            margin: -70px auto 40px;
            padding: 35px 30px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            }

            .form-container h4 {
                font-weight: 600;
                color: #343a40;
                margin-bottom: 25px;
                text-align: center;
            }

        .form-floating label {
            font-weight: 500;
        }

        .text-danger {
            font-size: 0.875rem;
        }

        .d-grid .btn + .btn {
            margin-top: 10px;
        }

        .btn-cancel {
            border-color: #adb5bd;
            color: #495057;
        }

            .btn-cancel:hover {
                background-color: #e9ecef;
            }
    </style>
</head>
<body>


    <div class="hero mb-5">
        <h1>@ViewBag.Title</h1>
    </div>

    <!-- Edit Form Card -->
    <div class="form-container">
        <h4>Edit Category Details</h4>

        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.CategoryId)

            <div class="form-floating mb-3">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Category Name", autocomplete = "off" })
                @Html.LabelFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success btn-lg">Save Changes</button>
                <a href="@Url.Action("Index", "Category")" class="btn btn-outline-secondary btn-lg btn-cancel">Cancel</a>
            </div>
        }
    </div>

   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
